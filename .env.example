# Base de donnees
DB_ROOT_PASSWORD=changeme_root_password
DB_NAME=orisha_db
DB_USERNAME=orisha_user
DB_PASSWORD=changeme_secure_password

# JWT (generer une cle secrete forte : openssl rand -base64 64)
JWT_SECRET=changeme_generate_secure_key_with_openssl_rand_base64_64

# Domaine (pour Traefik)
DOMAIN=lucas-maiaux.fr

# CORS (origines autorisees, separees par des virgules)
CORS_ALLOWED_ORIGINS=https://mountainride.lucas-maiaux.fr

# Docker registry (optionnel, laisser vide si build local)
DOCKER_REGISTRY=
VERSION=latest
